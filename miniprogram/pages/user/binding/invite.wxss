.container {
  min-height: 100vh;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 40rpx;
  position: relative;
}

.close-btn {
  position: absolute;
  top: 40rpx;
  left: 40rpx;
  width: 60rpx;
  height: 180rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.close-icon {
  font-size: 48rpx;
  color: #333;
}

.content {
  margin-top: 500rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 60rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  text-align: center;
  margin-bottom: 40rpx;
}

.highlight {
  color: #07c160;
  font-weight: bold;
}

.description {
  font-size: 28rpx;
  color: #888;
  text-align: center;
  line-height: 1.6;
  margin-bottom: 120rpx;
}

.confirm-btn {
  width: 100%;
  height: 88rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: auto;
  margin-bottom: 80rpx;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #07c160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}