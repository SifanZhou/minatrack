.container {
  min-height: 100vh;
  background: #f7f7f7;
  padding-bottom: env(safe-area-inset-bottom);
  width: 100%;
  box-sizing: border-box;
}

.user-info {
  background: #fff;
  padding: 40rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 30rpx;
}

.nickname {
  font-size: 36rpx;
  color: #333;
  font-weight: 500;
}

/* 新增管理师信息区域样式 */
.trainer-info {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
}

.trainer-header {
  display: flex;
  align-items: center;  /* 移除 justify-content */
  margin-bottom: 20rpx;
}

.trainer-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.no-trainer {
  color: #999;
  font-size: 28rpx;
  text-align: left;     /* 改为左对齐 */
  padding: 20rpx 0;
}

.scan-link {
  color: #07c160;       /* 添加链接颜色 */
  display: inline;      /* 使其成为内联元素 */
}

.trainer-content {
  display: flex;
  align-items: center;
}

.trainer-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 20rpx;
}

.trainer-info-right {
  flex: 1;
}

.trainer-name {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 6rpx;
}

.trainer-desc {
  font-size: 24rpx;
  color: #999;
}

.no-trainer {
  color: #999;
  font-size: 28rpx;
  text-align: center;
  padding: 30rpx 0;
}

.section {
  background: #fff;
  margin-bottom: 20rpx;
}

.section-title {
  padding: 30rpx;
  font-size: 32rpx;
  color: #999;
}

.list-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

/* 可以为历史记录入口添加特殊样式，如果需要的话 */
.history-item {
  color: #333;
}

.list-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 32rpx;
  color: #333;
}

.value {
  display: flex;
  align-items: center;
  color: #999;
  font-size: 32rpx;
}

.arrow {
  margin-left: 10rpx;
  color: #ccc;
}

/* 确保所有主要容器都占满屏幕宽度 */
.trainer-info,
.section,
.footer {
  width: 100%;
  box-sizing: border-box;
}

/* 调整列表项样式 */
.list-item {
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

/* 调整按钮容器样式 */
.footer {
  padding: 40rpx;
  width: 100%;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #f7f7f7;
  z-index: 100;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
}

.logout-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #f2f2f2;  /* 修改为灰色背景 */
  color: #999;       /* 修改为红色文字 */
  font-size: 32rpx;
  border-radius: 8rpx;
  text-align: center;
}


/* 添加自定义导航栏样式 */
.custom-nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 44px;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  z-index: 1000;
  padding-left: 16px;
  padding-right: 16px;
}

.nav-left {
  width: 30px;
  height: 30px;
  display: flex;
  align-items: center;
}

.close-icon {
  width: 24px;
  height: 24px;
  position: relative;
}

.close-icon::before,
.close-icon::after {
  content: '';
  position: absolute;
  width: 24px;
  height: 2px;
  background-color: #333;
  top: 50%;
  left: 0;
}

.close-icon::before {
  transform: rotate(45deg);
}

.close-icon::after {
  transform: rotate(-45deg);
}

.nav-title {
  flex: 1;
  text-align: center;
  font-size: 17px;
  font-weight: 500;
  color: #333333;
}

/* 修改容器样式，删除重复定义 */
.container {
  padding-top: 170rpx; /* 固定值替代计算值 */
  min-height: 100vh;
  background: #f7f7f7;
  padding-bottom: env(safe-area-inset-bottom);
  width: 100%;
  box-sizing: border-box;
}

/* 其他样式保持不变 */