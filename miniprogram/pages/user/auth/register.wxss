.container {
  min-height: 100vh;
  background: #f8f9fa;
  display: flex;
  flex-direction: column;
  padding: 30rpx 0;
}

.form {
  width: calc(100% - 60rpx);
  background: #fff;
  border-radius: 16rpx;
  margin: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.form-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 50rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
  width: 100%;
  box-sizing: border-box;
}

.label {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.picker-wrapper {
  flex: 1;
  text-align: right;
}

.value {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  color: #666;
  font-size: 32rpx;
}

/* 为箭头添加左边距 */
.arrow {
  margin-left: 20rpx; /* 调整这个值来控制间距 */
}

/* 或者调整value内部元素的间距 */
.value text {
  margin-right: 20rpx; /* 为value内的文本元素添加右边距 */
}

.value text:last-child {
  margin-right: 0; /* 最后一个元素不需要右边距 */
}

/* 其他样式保持不变 */
.btn-wrapper {
  padding: 60rpx 50rpx 100rpx;
  width: 100%;
  box-sizing: border-box;
}

.submit-btn {
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #000000;  /* 修改为纯黑色 */
  color: #fff;
  font-size: 34rpx;
  font-weight: 500;
  border-radius: 14rpx;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.2);  /* 调整阴影颜色 */
  transition: transform 0.2s;
}

.submit-btn:active {
  transform: scale(0.98);
}

/* 禁用状态的按钮 */
.submit-btn[disabled] {
  background: #999999;  /* 禁用状态改为灰色 */
  box-shadow: none;
  color: #fff;
}

/* 增大picker选择器中的文字大小 */
/* 修改标签选择器为类选择器 */
/* 原来的 picker 选择器改为 .picker-class */
.picker-class {
  width: auto;
  min-width: 120rpx;
  text-align: right;
}

/* 原来的 page 选择器改为自定义类 */
.global-picker-style {
  --picker-view-text-size: 40rpx;
}

/* 其他样式保持不变 */
.page-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
  padding: 380rpx 50rpx 20rpx;  /* 修改顶部内边距 */
}

.page-subtitle {
  font-size: 28rpx;
  color: #999;
  padding: 0 50rpx 40rpx;
}