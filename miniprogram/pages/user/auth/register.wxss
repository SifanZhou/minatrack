.container {
  min-height: 100vh;
  background: #fff;
  display: flex;
  flex-direction: column;
}

.form {
  width: 100%;
}

.form-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 50rpx;
  border-bottom: 1rpx solid #eee;
  width: 100%;
  box-sizing: border-box;
}

.label {
  font-size: 32rpx;
  color: #333;
}

.value {
  display: flex;
  align-items: center;
  color: #999;
  font-size: 32rpx;
}

.arrow {
  margin-left: 16rpx;
  color: #ccc;
}

/* 修改按钮容器的样式 */
.btn-wrapper {
  padding: 100rpx 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #000;
  color: #fff;
  font-size: 32rpx;
  border-radius: 8rpx;
}

/* 增大picker选择器中的文字大小 */
picker {
  width: auto;
}

/* 通过页面全局样式影响picker-view的文字大小 */
page {
  --picker-view-text-size: 40rpx;
}