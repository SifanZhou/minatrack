/* 页面容器 */
.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 60rpx 40rpx;
  padding-top: 200rpx;  /* 调整顶部边距 */
  box-sizing: border-box;
  background-color: #f8f8f8;
  justify-content: flex-start;  /* 改为从顶部开始布局 */
}

/* 角色选择区域 */
.role-selection {
  width: 100%;
  margin-top: 300rpx;  /* 向上偏移 */
}

.role-title {
  font-size: 36rpx;
  font-weight: 500;
  text-align: center;
  margin-bottom: 60rpx;
  color: #333;
}

.role-options {
  display: flex;
  justify-content: space-between;
  gap: 30rpx;
}

.role-card {
  flex: 1;
  height: 300rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.role-card:active {
  transform: scale(0.98);
  background-color: #f0f0f0;
}

.role-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
}

.role-name {
  font-size: 34rpx;
  font-weight: 500;
  margin-bottom: 16rpx;
  color: #333;
}

.role-desc {
  font-size: 26rpx;
  color: #666;
  text-align: center;
}

/* 页脚区域 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 88rpx 0;
  text-align: center;
  background-color: #f8f8f8;
}

.copyright {
  font-size: 24rpx;
  color: #999;
}