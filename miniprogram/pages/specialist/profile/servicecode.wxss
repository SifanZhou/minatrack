/* 导航栏样式 */
.custom-nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 260rpx;
  background-color: #f8f8f8;
  display: flex;
  align-items: center;
  justify-content: space-between;
  z-index: 1000;
  padding: 0 32rpx;
  box-shadow: 0 0rpx 0rpx rgba(0, 0, 0, 0.05);
}

.nav-left {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  width: 24rpx;
  height: 24rpx;
  border-top: 4rpx solid #333;
  border-left: 4rpx solid #333;
  transform: rotate(-45deg);
}

.nav-title {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
}

/* 主容器样式 */
.container {
  min-height: 100vh;
  background-color: #f8f8f8;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  padding: 0 40rpx;
  padding-top: 176rpx;
}

/* 二维码容器样式 */
.qrcode-container {
  background-color: #f8f8f8;
  border-radius: 24rpx;
  padding: 280rpx;
  width: 100%;
  margin-top: 180rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 0rpx 0rpx rgba(0, 0, 0, 0.08);
}

.qrcode {
  width: 400rpx;
  height: 400rpx;
  margin-bottom: 40rpx;
  border-radius: 16rpx;
}

.tip {
  font-size: 28rpx;
  color: #888;
  margin-top: 20rpx;
}

/* 分享按钮样式 */
.share-btn {
  width: 90%;
  background-color: #07c160;
  color: #fff;
  font-size: 36rpx;
  font-weight: 500;
  padding: 10rpx 0;
  border-radius: 20rpx;
  margin-top: 60rpx;
  box-shadow: 0 8rpx 16rpx rgba(7, 193, 96, 0.2);
  transition: all 0.3s ease;
}

.share-btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}