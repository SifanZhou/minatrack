.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #f8f8f8;
}

.login-container {
  width: 80%;
}

.login-btn {
  width: 80%;
  height: 90rpx;
  font-size: 32rpx;
  border-radius: 45rpx;
  background-color: #07c160;
  color: #fff;
  /* 确保文字居中 */
  display: flex;
  justify-content: center;
  align-items: center;
}

.login-btn.disabled {
  background-color: #cccccc;
  color: #ffffff;
}

.btn-hover {
  opacity: 0.8;
}