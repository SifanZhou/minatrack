/* 主题颜色 */
page {
  --primary-color: #07c160;
  --primary-light: #1aad19;
  --text-main: #333;
  --text-secondary: #666;
  --background: #f8f8f8;
  --border: #eee;
  --error: #e64340;
  
  /* 布局尺寸 */
  --page-padding: 40rpx;
  --card-radius: 16rpx;
  --btn-height: 88rpx;
  --btn-radius: 44rpx;
  
  /* 字体大小 */
  --font-large: 72rpx;
  --font-medium: 40rpx;
  --font-normal: 32rpx;
  --font-small: 28rpx;
  --font-mini: 24rpx;
}